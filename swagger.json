{
  "openapi": "3.0.3",
  "info": {
    "title": "KenzieMarket API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:3000/",
      "description": "Local Server"
    },
    {
      "url": "url/heroku",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "description": "Cadastrar usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type":"string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "isAdm": {
                    "type": "boolean"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "user",
                    "email": "user@mail.com",
                    "password": "123456",
                    "isAdm": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserWithoutPassword"
                }
              }
            }
          },
          "400": {
            "description": "Falta de alguma propriedade",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "ValidationError": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "Retornar lista de usuários",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserWithoutPassword"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "description": "Login do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@mail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário logado",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não cadastrado ou email incorreto",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "ValidationError": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "description": "Retornar o usuário correspondente ao id",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserWithoutPassword"
                }
              }
            }
          }
        }
      }
    },
    "/product": {
      "post": {
        "description": "Registrar produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome do produto"
                  },
                  "unit_value": {
                    "type": "number",
                    "description": "Valor da unidade"
                  },
                  "quantity": {
                    "type": "number",
                    "description": "Quantidade em estoque"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "Retornar lista de produtos",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "products": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/product/{id}": {
      "get": {
        "description": "Retornar o produto correspondente ao id",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      }
    },
    "/cart/{product_id}": {
      "post": {
        "description": "Adicionar produto ao carrinho",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "quantity": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAfterAddProduct"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Deletar um produto do carrinho",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "quantity": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "OK"
          }
        }
      }
    },
    "/cart/{id}": {
      "get": {
        "description": "Retornar o carrinho correspondente ao id",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cart"
                }
              }
            }
          }
        }
      }
    },
    "/cart": {
      "get": {
        "description": "Retornar lista de carrinhos",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      }
    },
    "/send-email": {
      "post": {
        "description": "Envio de email do usuário administrador para outro usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "from": {
                    "type": "string"
                  },
                  "to": {
                    "type": "string"
                  },
                  "subject": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Gerado com UUID v4"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "description": "Hashed com BCrypt"
          },
          "isAdm": {
            "type": "boolean",
            "description": "Define se o usuário tem nível administrador ou não"
          },
          "createdOn": {
            "type": "string"
          },
          "updatedOn": {
            "type": "string"
          },
          "cart": {
            "type": "array"
          }
        }
      },
      "UserWithoutPassword": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Gerado com UUID v4"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "isAdm": {
            "type": "boolean",
            "description": "Define se o usuário tem nível administrador ou não"
          },
          "createdOn": {
            "type": "string",
            "description": "Gerado com Date"
          },
          "updatedOn": {
            "type": "string",
            "description": "Gerado com Date"
          },
          "cart": {
            "type": "array"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Gerado com UUID v4"
          },
          "name": {
            "type": "string"
          },
          "unit_value": {
            "type": "number"
          },
          "quantity": {
            "type": "integer"
          },
          "createdOn": {
            "type": "string",
            "description": "Gerado com Date"
          },
          "updatedOn": {
            "type": "string",
            "description": "Gerado com Date"
          }
        }
      },
      "UserAfterAddProduct": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id do usuário dono do carrinho"
          },
          "name": {
            "type": "string",
            "description": "Nome do usuário dono do carrinho"
          },
          "email": {
            "type": "string",
            "description": "Email do usuário dono do carrinho"
          },
          "cart": {
            "type": "object",
            "description": "Carrinho do usuário"
          }
        }
      },
      "Cart": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id do carrinho"
          },
          "createdOn": {
            "type": "string",
            "description": "Gerado com Date"
          },
          "updatedOn": {
            "type": "string",
            "description": "Gerado com Date"
          },
          "products": {
            "type": "array",
            "description": "Lista de produtos do carrinho"
          }
        }        
      }
    }
  }
}

